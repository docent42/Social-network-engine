<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:pro="http://www.liquibase.org/xml/ns/pro"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

	<changeSet author="esv" id="2020-01-07-create-table-block_history">
		<createTable tableName="block_history">
			<column name="id" type="INT" autoIncrement="true">
				<constraints nullable="false" primaryKey="true"/>
			</column>
			<column name="time" type="TIMESTAMP"/>
			<column name="person_id" type="INT(11)">
				<constraints nullable="false"/>
			</column>
			<column name="post_id" type="INT(11)">
				<constraints nullable="false"/>
			</column>
			<column name="comment_id" type="INT(11)">
				<constraints nullable="false"/>
			</column>
			<column name="action" type="ENUM('BLOCK', 'UNBLOCK')">
				<constraints nullable="false"/>
			</column>
		</createTable>
	</changeSet>
</databaseChangeLog>